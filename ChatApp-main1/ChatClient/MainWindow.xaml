<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="C# TCP Chat Client" Height="500" Width="800" Closing="Window_Closing"
        x:Name="AppWindow" Background="#F0F0F0">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Server IP:" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="IpTextBox" Text="127.0.0.1" Width="100" VerticalAlignment="Center"/>
            <TextBlock Text="Port:" VerticalAlignment="Center" Margin="10,5,5,5"/>
            <TextBox x:Name="PortTextBox" Text="8888" Width="50" VerticalAlignment="Center"/>
            <TextBlock Text="Username:" VerticalAlignment="Center" Margin="10,5,5,5"/>
            <TextBox x:Name="UsernameTextBox" Text="User" Width="100" VerticalAlignment="Center"/>
            <Button x:Name="ConnectButton" Content="Connect" Margin="10,0,0,0" Padding="10,2" Click="ConnectButton_Click"/>
            <Button x:Name="DisconnectButton" Content="Disconnect" IsEnabled="False" Margin="5,0,0,0" Padding="10,2" Click="DisconnectButton_Click"/>
            <ToggleButton x:Name="ThemeToggleButton" Content="🌙 Dark Mode" Margin="20,0,0,0" Padding="10,2" Click="ThemeToggleButton_Click"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <ListBox x:Name="ChatListBox" Grid.Column="0" Margin="0,0,10,0"
                     HorizontalContentAlignment="Stretch" BorderBrush="Gray" BorderThickness="1"/>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Online Users" FontWeight="Bold" Margin="0,0,0,5"/>
                <ListView x:Name="UserListView" Grid.Row="1" BorderBrush="Gray" BorderThickness="1"
                          MouseDoubleClick="UserListView_MouseDoubleClick">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Username" DisplayMemberBinding="{Binding}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                 <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="MessageTextBox" Grid.Column="0" Margin="0,0,10,0" IsEnabled="False" KeyDown="MessageTextBox_KeyDown"/>
                <Button x:Name="SendButton" Grid.Column="1" Content="Send" Padding="20,5" IsEnabled="False" Click="SendButton_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple Chat App" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <ListBox Name="lbActiveUsers" Margin="5" Grid.Column="0"/>
        
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
        
            <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="0">
                <TextBlock Text="IP:" VerticalAlignment="Center" Margin="5,0"/>
                <TextBox Name="txtIp" Text="127.0.0.1" Width="100"/>
                <TextBlock Text="Port:" VerticalAlignment="Center" Margin="5,0"/>
                <TextBox Name="txtPort" Text="8888" Width="50"/>
                <TextBlock Text="Username:" VerticalAlignment="Center" Margin="5,0"/>
                <TextBox Name="txtUsername" Text="User" Width="100"/>
                <Button Name="btnConnect" Content="Connect" Margin="10,0" Click="BtnConnect_Click"/>
                <Button Name="btnDisconnect" Content="Disconnect" Click="BtnDisconnect_Click" IsEnabled="False"/>
            </StackPanel>
        
            <ListBox Name="lbChatLog" Margin="5" Grid.Row="1"/>
        
            <Grid Grid.Row="2" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Name="txtMessage" Grid.Column="0" KeyDown="TxtMessage_KeyDown" IsEnabled="False"/>
                <Button Name="btnSend" Content="Send" Grid.Column="1" Margin="5,0,0,0" Click="BtnSend_Click" IsEnabled="False"/>
            </Grid>
        </Grid>
    </Grid>
</Window>